{
  "name": "sparta-social",
  "version": "0.0.1",
  "description": "A decentralized exercise activity tracker.",
  "author": "Daniel Doubrovkine",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "tsup",
    "start": "node dist/index.js",
    "lexgen": "lex gen-server ./src/lexicon ./lexicons/*",
    "clean": "rimraf dist coverage",
    "test": "jest"
  },
  "dependencies": {
    "@atproto/api": "^0.18.0",
    "@atproto/common": "^0.5.0",
    "@atproto/identity": "^0.4.0",
    "@atproto/lexicon": "^0.6.0",
    "@atproto/oauth-client-node": "^0.3.0",
    "@atproto/sync": "^0.1.4",
    "@atproto/syntax": "^0.4.0",
    "@atproto/xrpc-server": "^0.10.0",
    "@mapbox/polyline": "^1.2.1",
    "better-sqlite3": "^12.0.0",
    "dotenv": "^17.0.0",
    "duration-pretty": "^0.1.1",
    "envalid": "^8.0.0",
    "express": "^5.2.1",
    "fit-file-parser": "^2.0.0",
    "iron-session": "^8.0.2",
    "kysely": "^0.28.0",
    "multer": "^2.0.0",
    "multiformats": "^13.0.0",
    "pino": "^10.0.0",
    "uhtml": "^4.5.9"
  },
  "devDependencies": {
    "@atproto/lex-cli": "^0.9.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.2",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "jest": "^30.0.0",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.0",
    "superagent": "^10.1.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "maxWorkers": 1,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/lexicon/**/*.ts"
    ],
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "^#/(.*)$": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "./tests/jest.env.ts",
      "./tests/jest.global.ts"
    ],
    "setupFilesAfterEnv": [
      "./tests/jest.setup.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true,
          "diagnostics": false
        }
      ]
    }
  }
}
